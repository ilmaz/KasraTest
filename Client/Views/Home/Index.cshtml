@{
    ViewData["Title"] = "Home Page";
}

<div class="container score">
    <div class="row">
        <div class="col-2 text-right">Score</div>
        <div class="col-4"><input type="text" id="scoreInput" /></div>
    </div>
</div>
<div class="row">
    <div class="col-6 text-center">
        <button id="addScoreButton" class="btn btn-info hide">Add Score And Get All Data (With SignalR)</button>
    </div>
    <div class="col-6 text-center">
        <button id="getScoreButton" class="btn btn-success hide">Get All Data (Without SignalR)</button>
    </div>
</div>
<div class="row">
    <div class="col-12" id="scoreList">
    </div>
</div>

@section Scripts{
    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}

